-- game
function game_init()
	player1 = {
	 x = 32,
	 facing_left = false,
	}
	player2 = {
		x = 32,
		facing_left = false,
	}
	start_time = time()
end

function game_update()
	//p1
	if btn(➡️) then
	 player1.x += 1
	 player1.facing_left = false
	end
	if btn(⬅️) then
	 if (player1.x > 0) then
	 	player1.x -= 1
	 end
	 player1.facing_left = true
	end

	//p2
	if btn(➡️, 1) then
	 player2.x += 1
	 player2.facing_left = false
	end
	if btn(⬅️, 1) then
		if (player2.x > 0) then
	 	player2.x -= 1
	 end
	 player2.facing_left = true
	end
end

function game_draw()
	cls()
	print(flr(time() - start_time))
	spr(1, player1.x, 32, 2, 2, player1.facing_left)
	if (two_player) then
		spr(1, player2.x, 64, 2, 2, player2.facing_left)
	end
end
