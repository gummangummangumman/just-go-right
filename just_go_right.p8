-- menu
function menu_update()
	if btnp(❎) then
		scene = "game"
		game_init()
	end
	if btnp(❎, 1) then
		two_player = not two_player
	end
end

function menu_draw()
	cls()
	if (two_player) then
		print("two player", 42, 53)
	else
		print("one player", 42, 53)
	end
	print("press ❎ to start", 30, 63)
end
